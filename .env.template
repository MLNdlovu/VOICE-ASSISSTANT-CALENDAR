# Environment Configuration for Voice Assistant Calendar
# Copy this file to .env and fill in your actual values

# ============================================================
# FLASK CONFIGURATION
# ============================================================

# Flask environment (development, production)
ENV=development

# Flask secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your-secret-key-here-minimum-32-characters

# ============================================================
# GOOGLE OAUTH CONFIGURATION
# ============================================================

# Google OAuth client ID (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com

# Google OAuth client secret (from Google Cloud Console)
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# ============================================================
# OPENAI CONFIGURATION
# ============================================================

# OpenAI API key (from https://platform.openai.com/account/api-keys)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI model to use (gpt-3.5-turbo, gpt-4, etc.)
OPENAI_MODEL=gpt-3.5-turbo

# OpenAI request timeout in seconds
OPENAI_REQUEST_TIMEOUT=30

# ============================================================
# DATABASE CONFIGURATION
# ============================================================

# SQLite database path (relative to app root)
DATABASE_PATH=app.db

# ============================================================
# APPLICATION SETTINGS
# ============================================================

# Application host (0.0.0.0 for production, 127.0.0.1 for development)
APP_HOST=127.0.0.1

# Application port
APP_PORT=5000

# Enable debug mode (Never enable in production)
DEBUG=True

# ============================================================
# SECURITY SETTINGS
# ============================================================

# Enable HTTPS only cookies (set to True in production)
SESSION_COOKIE_SECURE=False

# Enable HttpOnly flag on session cookies
SESSION_COOKIE_HTTPONLY=True

# Session cookie SameSite policy (Strict, Lax, None)
SESSION_COOKIE_SAMESITE=Lax

# Session lifetime in hours
SESSION_LIFETIME=168

# ============================================================
# LOGGING CONFIGURATION
# ============================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional, leave empty for console only)
LOG_FILE=logs/app.log

# ============================================================
# FEATURE FLAGS
# ============================================================

# Enable voice recognition feature
ENABLE_VOICE=True

# Enable accessibility features
ENABLE_ACCESSIBILITY=True

# Enable visual calendar
ENABLE_VISUAL_CALENDAR=True

# Enable AI recommendations
ENABLE_AI_RECOMMENDATIONS=True

# Enable email drafting
ENABLE_EMAIL_DRAFTING=True
